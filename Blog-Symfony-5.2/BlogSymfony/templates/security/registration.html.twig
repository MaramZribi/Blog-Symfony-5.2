{% extends 'base.html.twig' %}
{% block body %}
<h1>Créer compte</h1>
{{ form_start(form) }}
{{ form_row(form.username,{'label' : 'Nom','attr':{'placeholder':'Entrez votre nom ...'}})}}
{{ form_row(form.name,{'label' : 'Prenom','attr':{'placeholder':'Entrez votre prenom ...'}})}}
{{ form_row(form.departement,{'label' : 'Departement','attr':{'placeholder':'Entrez votre departement ...'}})}}

{{ form_row(form.email,{'label' : 'Email','attr':{'placeholder':'Entrez votre email ...'}})}}
{{ form_row(form.password,{'label' : 'Mot de passe','attr':{'placeholder':'Entrez votre mot de passe'}})}}
<div class="checkbox">
    <label class="remember-me-label">
        Sport pratiqué:
        {{ form_widget(form.sport) }}
        <span class="checkmark"></span>
    </label>
</div>

<div class="checkbox">
    <label class="remember-me-label">
        Niveau:
        {{ form_widget(form.niveau) }}
        <span class="checkmark"></span>
    </label>
</div>
<button type="submit" class="btn btn-success">Ajouter </button>
<button type="reset" class="btn btn-success">Reset</button>
{{form_end(form)}}
{% endblock %}
